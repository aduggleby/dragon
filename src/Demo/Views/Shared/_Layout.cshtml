<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        
        <script src="@Scripts.Url("~/scripts/jquery-1.7.1.js")" type="text/javascript"></script>
        <script src="@Url.Action("FacebookJS","Context")" type="text/javascript"></script>
        
        <script type="text/javascript">
            $(function () {
                $(document).dragonFacebook({
                   appId:     "@System.Configuration.ConfigurationManager.AppSettings["Dragon.Context.Facebook.APIID"]", 
                   loginUrl:  "/context/LoginFacebook", 
                   logoutUrl: "/context/Logout"
                });
            });
        </script>
        
        @RenderSection("AdditionalRessources", required: false)

    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("your logo here", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>

        @RenderSection("scripts", required: false)
    </body>
</html>
