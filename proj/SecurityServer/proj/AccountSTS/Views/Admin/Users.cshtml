@model Dragon.SecurityServer.AccountSTS.Models.FindUserViewModel
@{
    ViewBag.Title = "User Management";
}

<!-- START Template Main -->
<section id="main" role="main" class="wav-login">
    <!-- START Template Container -->
    <section class="container" id="wav-home">


        <!-- START row -->
        <div class="row">

            <!-- Brand -->
            <div class="row wav-login-brand">
                <img src="//wav-prod-cdn-main.azureedge.net/assets/images/sso/logo-signup-small.png">
            </div>

            <div class="flip-container">
                <!-- START flipper -->
                <div class="flipper">
                    <!-- START sign in -->
                    <div class="front wav-login-signin">
                        <div class="panel">
                            <div class="panel-heading">
                                <h1>@ViewBag.Title</h1>

                                <!--<p class="subtext"></p>-->
                            </div>
                            <div class="panel-body">

                                @using (Html.BeginForm("Users", "Admin", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
                                {
                                    @Html.AntiForgeryToken()
                                    <h4>Find a user by mail address</h4>
                                    <hr/>
                                    @Html.ValidationSummary("", new {@class = "text-danger"})
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.SearchTerm, new {@class = "col-md-2 control-label"})
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(m => m.SearchTerm, new {@class = "form-control"})
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" class="btn btn-default" value="Search"/>
                                        </div>
                                    </div>

                                    if (ViewBag.Users != null)
                                    {
                                        <br/>
                                        <br/>
                                        <h4>Found @ViewBag.Users.Count users</h4>
                                        <hr/>
                                        <div>
                                            @foreach (var user in ViewBag.Users)
                                            {
                                                <p>
                                                    @user.Email <a href="@Url.Action("Impersonate", "Admin", new {id = user.Id})">[impersonate]</a>
                                                </p>
                                            }
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <!--/ END flipper -->
            </div>
        </div>
        <!--/ END row -->

    </section>
    <!-- END Template Container -->
</section>
<!--/ END Template Main -->