@model Dragon.SecurityServer.AccountSTS.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
@{
    var parameters = new RouteValueDictionary(HttpContext.Current.Request.QueryString.Keys.Cast<string>()
                .ToDictionary(k => k, v => (object)HttpContext.Current.Request.QueryString[v]));

}
<!-- START Template Main -->
<section id="main" role="main" class="wav-login">
    <!-- START Template Container -->
    <section class="container" id="wav-home">


        <!-- START row -->
        <div class="row">
            <div class="wav-login-wrapper">

                <!-- Brand -->
                <div class="row wav-login-brand">
                    <img src="//wav-prod-cdn-main.azureedge.net/assets/images/intro/logo-signup-small.png">
                </div>
                <div class="row wav-login-notebook">
                    <img src="//wav-prod-cdn-main.azureedge.net/assets/images/intro/laptop-signup.png">
                </div>


                <div class="flip-container">
                    <!-- START flipper -->
                    <div class="flipper">
                        <!-- START sign in -->
                        <div class="front wav-login-signin">
                            <div class="panel">
                                <div class="panel-heading">
                                    <h1>Welcome to WhatAVenture</h1>
                                    <p class="subtext">Let‘s turn your business ideas into success.</p>

                                </div>
                                <div class="panel-body">
                                    @using (Html.BeginForm("Register", "Account", parameters, FormMethod.Post, new Dictionary<string, object> { { "@class", "form-horizontal" }, { "role", "form" } }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="row">
                                            <div class="col-sm-12">

                                                @Html.CustomValidationSummary(true, "", new { @class = "text-danger" })
                                                <div class="form-group ">
                                                    <div class="row">
                                                        <div class="col-sm-12">
                                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "help-block mt10" })
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-sm-12">
                                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "help-block mt10" })
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-sm-12">
                                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm password" })
                                                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "help-block mt10" })
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-sm-12 mt10">
                                                            <input type="submit" class="btn btn-lg btn-block mod-wav-btn-primary signup" value="Sign up for free" />
                                                        </div>
                                                    </div>


                                                </div>

                                            </div>

                                        </div>
                                    }
                                </div>

                                <div class="wav-login-or-register">
                                    <p>Already have an account?</p>
                                    @Html.ActionLink("Sign in here", "Login", null, parameters, new Dictionary<string, object>() {
                                        { "class" , "btn btn-success mod-wav-btn-outline wav-login-or-register-button toggle-register" } })

                                </div>


                                <div class="panel-footer">
                                    <div class="col-sm-12 text-center">
                                        <span class="orsignin">or sign in with &nbsp;</span>
                                        @using (Html.BeginForm("ExternalLogin", "Account", new
                                        {
                                            ReturnUrl = ViewBag.RouteValues["ReturnUrl"],
                                            appid = ViewBag.RouteValues["appid"],
                                            serviceid = ViewBag.RouteValues["serviceid"],
                                            userid = ViewBag.RouteValues["userid"],
                                            expiry = ViewBag.RouteValues["expiry"],
                                            signature = ViewBag.RouteValues["signature"]
                                        }))
                                        {
                                            @Html.AntiForgeryToken()
                                            <button type="submit" style="border: none; background-color: transparent" class="" id="Facebook" name="provider" value="Facebook"><img title="Facebook" src="//wav-prod-cdn-main.azureedge.net/assets/images/intro/signin_facebook.png"></button>
                                            <button type="submit" style="border: none; background-color: transparent" class="" id="Google" name="provider" value="Google"><img title="Google" src="//wav-prod-cdn-main.azureedge.net/assets/images/intro/signin_google.png"></button>
                                            <button type="submit" style="border: none; background-color: transparent" class="" id="Twitter" name="provider" value="Twitter"><img title="Twitter" src="//wav-prod-cdn-main.azureedge.net/assets/images/intro/signin_twitter.png"></button>
                                            <button type="submit" style="border: none; background-color: transparent" class="" id="Microsoft" name="provider" value="Microsoft"><img title="Microsoft" src="//wav-prod-cdn-main.azureedge.net/assets/images/intro/signin_windows.png"></button>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="row wav-login-forgot">
                                @Html.ActionLink("Forgot your password?", "ForgotPassword", null, parameters, new Dictionary<string, object>() {
                                        { "class" , "toggle-password" } })

                            </div>
                        </div>

                    </div>
                    <!--/ END flipper  -->
                </div>
            </div>
        </div>
        <!--/ END row -->

    </section>
    <!-- END Template Container -->
</section>
<!--/ END Template Main -->
