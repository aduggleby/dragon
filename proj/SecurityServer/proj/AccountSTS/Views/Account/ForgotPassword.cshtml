@model Dragon.SecurityServer.AccountSTS.Models.ForgotPasswordViewModel

@{
    var parameters = new RouteValueDictionary(HttpContext.Current.Request.QueryString.Keys.Cast<string>()
                .ToDictionary(k => k, v => (object)HttpContext.Current.Request.QueryString[v]));

}

<!-- START Template Main -->
<section id="main" role="main" class="wav-login">
    <!-- START Template Container -->
    <section class="container" id="wav-home">


        <!-- START row -->
        <div class="row">
            <div class="wav-login-wrapper">

                <!-- Brand -->
                <div class="row wav-login-brand">
                    <img src="//wav-prod-cdn-main.azureedge.net/assets/images/sso/logo-signup-small.png">
                </div>
                <div class="row wav-login-notebook">
                    <img src="//wav-prod-cdn-main.azureedge.net/assets/images/sso/laptop-signup.png">
                </div>


                <div class="flip-container">
                    <!-- START flipper -->
                    <div class="flipper">
                        <!-- START sign in -->
                        <div class="front wav-login-signin">
                            <div class="wav-panel panel">
                                <div class="panel-heading">
                                    <h1>Reset your password</h1>
                                    <p class="subtext">
                                        Please enter the email you signed up with:
                                    </p>
                                </div>
                                <div class="panel-body">
                                    @using (Html.BeginForm("ForgotPassword", "Account", parameters, FormMethod.Post, new Dictionary<string, object> { { "@class", "form-horizontal" }, { "role", "form" } }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="row">
                                            <div class="col-sm-12">

                                                @Html.CustomValidationSummary(true, "", new { @class = "text-danger" })
                                                <div class="form-group ">
                                                    <div class="row">
                                                        <div class="col-sm-12">
                                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "help-block mt10" })
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="col-sm-12 mt10">
                                                            <input type="submit" class="btn btn-lg btn-block mod-wav-btn-primary signup" value="Reset password" />
                                                        </div>
                                                    </div>


                                                </div>

                                            </div>

                                        </div>
                                    }
                                </div>

                                <div class="wav-login-or-register">
                                    <p>Already have an account?</p>
                                    @Html.ActionLink("Sign in here", "Login", null, parameters, new Dictionary<string, object>() {
                                        { "class" , "btn btn-success mod-wav-btn-outline wav-login-or-register-button toggle-register" } })

                                </div>

                            </div>

                        </div>

                    </div>
                    <!--/ END flipper  -->
                </div>
            </div>
        </div>
        <!--/ END row -->

    </section>
    <!-- END Template Container -->
</section>
<!--/ END Template Main -->
