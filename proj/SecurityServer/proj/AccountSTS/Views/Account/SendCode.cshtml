@model Dragon.SecurityServer.AccountSTS.Models.SendCodeViewModel
@{
    ViewBag.Title = Resources.Global.SendTitle;
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("SendCode", "Account", (RouteValueDictionary)ViewBag.RouteValues, FormMethod.Post, new Dictionary<string, object> { { "class", "form-horizontal" }, { "role", "form" } }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("rememberMe", Model.RememberMe)
    <h4>@Resources.Global.SendVerification</h4>
    <hr />
    <div class="row">
        <div class="col-md-8">
            @Resources.Global.SelectAuthenticationProvider
            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
            <input type="submit" value="@Resources.Global.Submit" class="btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
